@model Esh.Models.Create_Post

@{
    ViewData["Title"] = "Create_Post";
}

<script src="https://cdn.tiny.cloud/1/x4qh25xwzcoc5bs4k4ciqwy4umd530rd9ltwg6s2acjv1bio/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#mytextarea'
    });

</script>

<h1>Create Post</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data" asp-action="Query_Problem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="textfile" class="control-label">Description</label>
                <textarea asp-for="textfile"></textarea>
                <span asp-validation-for="textfile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="photos" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="photos" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="photos" class="text-danger"></span>
            </div>

            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
            <script>
                tinymce.init({
                    selector: 'textarea',
                    plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                    toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                    toolbar_mode: 'floating',
                    tinycomments_mode: 'embedded',
                    tinycomments_author: 'Author name',
                });
            </script>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

