@model Esh.Models.MNetwork

<style>
    body {
        background-color: #B3E5FC;
        border-radius: 10px
    }

    .card {
        width: 400px;
        border: none;
        border-radius: 10px;
        background-color: #fff
    }

    .stats {
        background: #f2f5f8 !important;
        color: #000 !important
    }

    .articles {
        font-size: 10px;
        color: #a1aab9
    }

    .number1 {
        font-weight: 500
    }

    .followers {
        font-size: 10px;
        color: #a1aab9
    }

    .number2 {
        font-weight: 500
    }

    .rating {
        font-size: 10px;
        color: #a1aab9
    }

    .number3 {
        font-weight: 500
    }
</style>

<h1>Friend Requests</h1>
<div class="container mt-5 d-flex justify-content-center">
    @foreach (var cnr in Model.requsers)
    {
        <div class="card p-3">
            <div class="d-flex align-items-center">
                <div class="image"> <img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" class="rounded" width="155"> </div>
                <div class="ml-3 w-100">
                    <h4 class="mb-0 mt-0">@cnr.name</h4> <span>@cnr.designation</span>
                    <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
                        <div class="d-flex flex-row"> <span class="articles">Request Time </span> <span class="number1">@cnr.reqtime</span> </div>
                        <div class="d-flex flex-row"> <span class="followers">Followers</span> <span class="number2">980</span> </div>
                        <div class="d-flex flex-row"> <span class="rating">University</span> <span class="number3">@cnr.school</span> </div>
                    </div>
                    <div class="button mt-2 d-flex flex-row align-items-center"> <a href="~/MyNetwork/Accept?fname=@cnr.uid"><button class="btn btn-sm btn-outline-primary w-100">Accept</button></a> <a href="~/MyNetwork/Reject?fname=@cnr.uid"><button class="btn btn-sm btn-primary w-100 ml-2">Reject</button> </a></div>
                </div>
            </div>
        </div>
    }
</div>


<h1>Friends</h1>
<div class="container mt-5 d-flex justify-content-center">
    @foreach (var cnr in Model.friends)
    {
        <div class="card p-3">
            <div class="d-flex align-items-center">
                <div class="image"> <img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" class="rounded" width="155"> </div>
                <div class="ml-3 w-100">
                    <h4 class="mb-0 mt-0">@cnr.name</h4> <span>@cnr.designation</span>
                    <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
                        <!--<div class="d-flex flex-row"> <span class="articles">Request Time </span> <span class="number1"></span> </div>-->
                        <div class="d-flex flex-row"> <span class="followers">Followers</span> <span class="number2">980</span> </div>
                        <div class="d-flex flex-row"> <span class="rating">University</span> <span class="number3">@cnr.Schoolname</span> </div>
                    </div>
                    <div class="button mt-2 d-flex flex-row align-items-center"> <button class="btn btn-sm btn-outline-primary w-100"><a href="~/MyNetwork/Unfollow?fname=@cnr.emailid">Unfollow</a></button>  </div>
                </div>
            </div>
        </div>
    }
</div>

